#Bind{
    width 100vw
    height 100vh
    background: rgba(0,0,0,.7)
    position fixed
    left 0
    top 0
    z-index: 13
    display: flex
    justify-content: center
    align-content: center
    align-items: center
    flex-wrap: wrap
    img{
        display: block
    }
    .BindBox{
        width:69.3vw;
        height:76.5vw;
        margin: 0 auto
        background:rgba(255,255,255,1);
        border-radius:1.3vw;
        box-sizing: border-box
        padding: 0 6.8vw
        position: relative
        -webkit-transform-origin: center
        transform-origin: center
        .title{
            width 100%
            text-align center
            font-size:5.6vw;
            font-family:FZDaHei-B02S;
            font-weight:400;
            color:rgba(62,62,62,1);
            margin-top: 11.9vw
            margin-bottom: 8vw
            letter-spacing: 1vw
        }
        .inputBox{
            width 54.9vw
            height 8.7vw
            margin 5vw auto 0
            display: flex
            justify-content: space-between
            align-content: center
            align-items: center
            .input{
                width 100%
                height 100%
                display: flex
                justify-content: space-between
                align-content: center
                align-items: center
                border-bottom: 0.1vw solid rgba(59,59,59,1);
                .inputFrom{
                    width 46vw
                    height 100%
                    font-size:3.5vw;
                    font-family:Microsoft YaHei;
                    font-weight:400;
                    color:rgba(59,59,59,1);
                    line-height 8.7vw
                    background: transparent;
                    border: none
                    text-align left
                }
                .inputFromCode{
                    width 26vw
                    height 100%
                    font-size:3.5vw;
                    font-family:Microsoft YaHei;
                    font-weight:400;
                    color:rgba(59,59,59,1);
                    line-height 8.7vw
                    background: transparent;
                    border: none
                    text-align left
                }
                .inputFromPicker{
                    width 41vw
                    height 100%
                    font-size:3.5vw;
                    font-family:Microsoft YaHei;
                    font-weight:400;
                    color:rgba(59,59,59,1);
                    line-height 8.7vw
                    background: transparent;
                    border: none
                    text-align left
                }
                .codeBtn{
                    width:18.4vw;
                    height:4.8vw;
                    background:rgba(255,183,23,1);
                    border-radius:2.4vw;
                    display: flex
                    justify-content: center
                    align-items: center
                    flex-wrap: nowrap
                    font-size:2.9vw;
                    font-family:FZHei-B01S;
                    font-weight:400;
                    color:rgba(255,255,255,1);
                }
                .phoneImg{
                    width 3.5vw
                    margin-right 3.3vw
                }
                .codeImg{
                    width: 3.2vw
                    margin-right: 3.2vw
                }
                .nameImg{
                    width 4vw
                    margin-right 3.2vw
                }
                .narrow{
                    width: 3.1vw
                }
            }
        }
        .submitBtn{
            width:54.9vw;
            height:9.6vw;
            background:rgba(255,197,13,1);
            border-radius:4.8vw; 
            font-size:4.8vw;
            font-family:FZDaHei-B02S;
            font-weight:400;
            color:rgba(255,255,255,1);
            text-align center
            line-height: 8.5vw
            margin 7.5vw auto 0
            letter-spacing: 1.4vw
        }
        .close {
            width:5.9vw;
            height:5.9vw;
            display: block
            position: absolute
            right: 1.7vw
            top: 1.7vw
        }
    }

    .BindBoxActive{
        -webkit-animation: AlertAni 0.2s ease-in 1 forwards;
         animation: AlertAni 0.2s ease-in 1 forwards;
    }
    @-webkit-keyframes AlertAni {
        0% {
            -webkit-transform: scale(0)
        }
        100% {
            -webkit-transform: scale(1)
        }
    }

    @keyframes AlertAni {
        0% {
            transform: scale(0)
        }
        100% {
            ttransform: scale(1)
        }
    }
}